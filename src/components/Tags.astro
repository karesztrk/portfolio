---
import Icon from "./Icon.astro";
import TagIcon from "../assets/images/icons/Tag.svg";
---

<div class="tags">
  <Icon src={TagIcon.src} viewBox={`0 0 ${TagIcon.width} ${TagIcon.height}`} />
  <ul>
    <slot />
  </ul>
</div>

<style>
  .tags {
    grid-column: span 2;
    display: grid;
    grid-template-columns: subgrid;

    .icon {
      height: 1lh;
    }

    > ul {
      display: flex;
      flex-wrap: wrap;
      list-style: none;
      text-transform: uppercase;
      gap: 0.75em;
      padding: 0;
      margin: 0;

      color: var(--color-tertiary);
      font-size: 1rem;
      font-variation-settings: "MONO" 1;
      vertical-align: middle;

      > li {
        margin: 0;
        list-style: none;
      }
    }
  }
</style>

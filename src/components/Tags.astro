---
import Icon from "./Icon.astro";
import TagIcon from "../assets/images/icons/Tag.svg?url";

interface Props {
  list: string[];
}

const { list } = Astro.props;
---

<div class="tags">
  <Icon src={TagIcon} viewBox="0 0 14 14" />
  <ul>
    {list.map((tag: string) => <li>{tag}</li>)}
  </ul>
</div>

<style>
  .tags {
    display: flex;
    align-items: center;
    gap: 8px;
    padding-inline: 6px;

    ul {
      display: flex;
      flex-wrap: wrap;
      list-style: none;
      text-transform: uppercase;
      gap: 12px;
      padding: 0;
      margin: 0;

      color: var(--color-tertiary);
      font-size: 1rem;
      font-variation-settings: "MONO" 1;
      vertical-align: middle;

      li {
        margin: 0;
        list-style: none;
      }
    }
  }
</style>

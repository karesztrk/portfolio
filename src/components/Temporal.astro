---
import Icon from "./Icon.astro";
import Calendar from "../assets/images/icons/Calendar.svg?url";

interface Props {
  type?: "contained" | "text";
  icon?: boolean;
}

const { type = "contained", icon } = Astro.props;
---

<time class:list={[type, icon && "middle"]}>
  {icon && <Icon src={Calendar} viewBox="0 0 14 14" />}
  <slot />
</time>

<style>
  time {
    color: var(--text);
    padding: 6px;
    border-radius: var(--radius);
    font-variation-settings: "MONO" 1;
    vertical-align: middle;

    &.middle {
      display: flex;
      flex-direction: row;
      align-items: center;
      gap: 8px;
    }

    &.contained {
      font-size: 0.85em;
      background: var(--color-time-contained-bg);
      color: var(--color-time-contained-text);
    }

    &.text {
      color: var(--color-tertiary);
    }

    .icon {
      color: var(--color-text);
    }
  }
</style>

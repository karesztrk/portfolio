---
interface Props {
  type?: "contained" | "text";
}

const { type = "contained" } = Astro.props;
---

<time class:list={[type]}>
  <slot />
</time>

<style>
  time {
    color: var(--text);
    background: var(--color-secondary);
    padding: 6px;
    border-radius: var(--radius);
    font-size: 0.85em;
    font-variation-settings: "MONO" 1;

    &.contained {
      color: var(--color-background);
      background: var(--color-tertiary);
    }
  }
</style>

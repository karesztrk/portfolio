---
import buttonSound from "@/assets/sounds/pop.mp3";
---

<audio src={buttonSound} controls></audio>

<style>
  audio {
    display: none;
  }
</style>

<script>
  const play = (audio: HTMLAudioElement) => async () => {
    await audio.play();
  };

  const audioElement = document.querySelector("audio");
  if (audioElement) {
    audioElement.volume = 0.1;
    const buttons = document.getElementsByClassName(
      "button",
    ) as HTMLCollectionOf<HTMLButtonElement>;

    const player = play(audioElement);
    for (const button of buttons) {
      button.addEventListener("click", player);
    }
  }
</script>

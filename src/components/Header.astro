---
import invaderImage from "../assets/images/icons/Invader.svg?url";
import Menu from "./Menu.astro";
import Icon from "./Icon.astro";
---

<header>
  <nav>
    <a href="/">
      <Icon
        class="logo"
        src={invaderImage}
        title="Space invader alien"
        viewBox="0 0 30 15"
      />
    </a>
    <Menu />
  </nav>
</header>

<style>
  header {
    grid-column: content;
    container: header / inline-size;

    > nav {
      display: flex;
      gap: var(--gap);
      justify-content: space-between;
      align-items: center;
    }

    & .logo {
      color: var(--color-logo);
      width: 2rem;
      height: auto;
      vertical-align: middle;
    }
  }
</style>

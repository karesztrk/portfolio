---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"svg">;

const { class: className, ...rest } = Astro.props;
//"separator" role is not permitted due to the interactivity
---

<svg
  role="presentation"
  class:list={["divider", className]}
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  {...rest}
>
  <line x1="0" y1="0" x2="100%" y2="0" stroke="currentColor"></line>
</svg>

<style>
  .divider {
    height: 1px;
    width: 100%;
    color: var(--color-footer-divider);
    stroke-dasharray: 5;
    stroke-width: 1px;
  }
</style>
